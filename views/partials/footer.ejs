<div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> -->
    <script src="/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleBtn = document.getElementById('sidebarToggle');
            const sidebar = document.querySelector('.sidebar');
            const overlay = document.getElementById('sidebarOverlay');

            // Fungsi Buka/Tutup
            function toggleMenu() {
                // Cek apakah tombol ada (biar gak error di halaman login yang gak ada navbarnya)
                if (sidebar && overlay) {
                    sidebar.classList.toggle('show');
                    overlay.classList.toggle('show');
                }
            }

            // A. Event Klik Tombol Menu
            if (toggleBtn) {
                toggleBtn.addEventListener('click', (e) => {
                    e.stopPropagation(); // Mencegah klik tembus
                    toggleMenu();
                });
            }

            // B. Event Klik Overlay (Area Kosong) -> TUTUP
            if (overlay) {
                overlay.addEventListener('click', () => {
                    // Paksa remove class 'show'
                    sidebar.classList.remove('show');
                    overlay.classList.remove('show');
                });
            }
        });

        
        document.addEventListener('contextmenu', function (e) {
            e.preventDefault();
            // alert("Ups! Klik kanan dimatikan demi keamanan. ðŸ”’");
        });

        document.onkeydown = function (e) {
            // Blokir F12
            if (event.keyCode == 123) {
                return false;
            }
            // Blokir Ctrl+U (View Source)
            if (e.ctrlKey && e.keyCode == 85) {
                return false;
            }
            // Blokir Ctrl+Shift+I (Inspect Element)
            if (e.ctrlKey && e.shiftKey && e.keyCode == 73) {
                return false;
            }
            // Blokir Ctrl+Shift+C (Inspect Element)
            if (e.ctrlKey && e.shiftKey && e.keyCode == 67) {
                return false;
            }
            // Blokir Ctrl+S (Save Page)
            if (e.ctrlKey && e.keyCode == 83) {
                return false;
            }
        };
    </script>

</body>
</html>
