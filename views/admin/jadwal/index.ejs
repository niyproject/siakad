<%- include('../../partials/header', { title: 'Plotting Jadwal' }) %>
<%- include('../../components/sidebar-admin', { activePage: 'jadwal' }) %>

<div class="main-content">

    <%- include('../../components/navbar', { title: 'Plotting Jadwal', user: user }) %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="fw-bold text-primary mb-1">Jadwal Kegiatan Belajar Mengajar (KBM)</h5>
            <small class="text-muted">Mapping Guru, Mapel, dan Kelas.</small>
        </div>
        
        <a href="/admin/jadwal/tambah" class="btn btn-primary shadow-sm rounded-pill px-4">
            <i class="fas fa-plus me-2"></i> Buat Jadwal Baru
        </a>
    </div>

    <div class="card card-custom border-0 shadow-sm overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Kelas</th>
                            <th>Mata Pelajaran</th>
                            <th>Guru Pengampu</th>
                            <th>Waktu (Hari & Jam)</th>
                            <th>Semester</th>
                            <th class="text-end pe-4">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (jadwalList.length === 0) { %>
                            <tr><td colspan="6" class="text-center py-5 text-muted">Belum ada data jadwal.</td></tr>
                        <% } else { %>
                            <% jadwalList.forEach(item => { %>
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-primary rounded-pill"><%= item.nama_kelas %></span>
                                </td>
                                <td><span class="fw-bold text-dark"><%= item.nama_mapel %></span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-1 me-2 d-flex justify-content-center align-items-center" style="width:30px; height:30px;">
                                            <i class="fas fa-user-tie text-secondary small"></i>
                                        </div>
                                        <%= item.nama_lengkap %>
                                    </div>
                                </td>
                                
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="badge bg-warning text-dark border border-warning border-opacity-25 w-auto align-self-start mb-1">
                                            <%= item.hari %>
                                        </span>
                                        <small class="text-muted">
                                            <i class="far fa-clock me-1"></i> <%= item.jam_mulai %> - <%= item.jam_selesai %>
                                        </small>
                                    </div>
                                </td>

                                <td><small class="text-muted"><%= item.tahun %> (<%= item.semester %>)</small></td>
                                
                                <td class="text-end pe-4">
                                    <a href="/admin/jadwal/hapus/<%= item.id %>" class="btn btn-sm btn-danger rounded-circle shadow-sm" onclick="return confirm('Yakin hapus plotting ini?')" title="Hapus">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<%- include('../../partials/footer') %>