<%- include('../../partials/header', { title: 'Tambah Jadwal' }) %>
<%- include('../../components/sidebar-admin', { activePage: 'jadwal' }) %>

<div class="main-content">

    <%- include('../../components/navbar', { title: 'Buat Jadwal Baru', user: user }) %>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-custom border-0 shadow-sm">
                <div class="card-header bg-white p-4 border-0">
                    <h5 class="fw-bold m-0 text-primary">Form Plotting Jadwal</h5>
                </div>
                <div class="card-body p-4 pt-0">
                    
                    <form action="/admin/jadwal/tambah" method="POST">
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold small">Kelas</label>
                                <select name="kelas_id" class="form-select" required>
                                    <option value="">-- Pilih Kelas --</option>
                                    <% kelasList.forEach(k => { %>
                                        <option value="<%= k.id %>"><%= k.nama_kelas %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold small">Mata Pelajaran</label>
                                <select name="mapel_id" class="form-select" required>
                                    <option value="">-- Pilih Mapel --</option>
                                    <% mapelList.forEach(m => { %>
                                        <option value="<%= m.id %>"><%= m.nama_mapel %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold small">Hari</label>
                                <select name="hari" class="form-select" required>
                                    <option value="Senin">Senin</option>
                                    <option value="Selasa">Selasa</option>
                                    <option value="Rabu">Rabu</option>
                                    <option value="Kamis">Kamis</option>
                                    <option value="Jumat">Jumat</option>
                                    <option value="Sabtu">Sabtu</option>
                                    <option value="Minggu">Minggu</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold small">Jam Mulai</label>
                                <input type="time" name="jam_mulai" class="form-control" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold small">Jam Selesai</label>
                                <input type="time" name="jam_selesai" class="form-control" required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small">Guru Pengampu</label>
                            <select name="guru_id" class="form-select" required>
                                <option value="">-- Pilih Guru --</option>
                                <% guruList.forEach(g => { %>
                                    <option value="<%= g.id %>"><%= g.nama_lengkap %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/admin/jadwal" class="btn btn-light text-muted fw-bold">
                                <i class="fas fa-arrow-left me-2"></i> Batal
                            </a>
                            <button type="submit" class="btn btn-primary px-5 rounded-pill fw-bold shadow-sm">
                                <i class="fas fa-save me-2"></i> SIMPAN JADWAL
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

</div>

<%- include('../../partials/footer') %>