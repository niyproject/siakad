<%- include('../../partials/header', { title: 'Edit Guru' }) %>

<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow border-0 rounded-4 col-md-8 mx-auto">
            <div class="card-header bg-warning py-3">
                <h5 class="mb-0 fw-bold">Edit Data Guru</h5>
            </div>
            <div class="card-body p-4">
                <form action="/admin/guru/edit/<%= guru.id %>" method="POST">
                    <div class="mb-3">
                        <label>NIP</label>
                        <input type="text" name="nip" class="form-control" value="<%= guru.nip %>" required>
                    </div>
                    <div class="mb-3">
                        <label>Nama Lengkap</label>
                        <input type="text" name="nama_lengkap" class="form-control" value="<%= guru.nama_lengkap %>" required>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <label>Tempat Lahir</label>
                            <input type="text" name="tempat_lahir" class="form-control" value="<%= guru.tempat_lahir %>">
                        </div>
                        <div class="col-6">
                            <label>Tanggal Lahir</label>
                            <input type="date" name="tanggal_lahir" class="form-control" value="<%= guru.tgl_lahir_iso %>" required>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label>Jenis Kelamin</label><br>
                        <input type="radio" name="jenis_kelamin" value="L" <%= guru.jenis_kelamin == 'L' ? 'checked' : '' %>> Laki-laki
                        <input type="radio" name="jenis_kelamin" value="P" <%= guru.jenis_kelamin == 'P' ? 'checked' : '' %>> Perempuan
                    </div>
                    <button type="submit" class="btn btn-warning w-100 fw-bold">UPDATE DATA</button>
                    <a href="/admin/guru" class="btn btn-light w-100 mt-2">Batal</a>
                </form>
            </div>
        </div>
    </div>


<%- include('../../partials/footer') %>
