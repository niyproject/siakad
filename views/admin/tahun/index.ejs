<%- include('../../partials/header', { title: 'Tahun Ajaran' }) %>
<%- include('../../components/sidebar-admin', { activePage: 'tahun' }) %>

<div class="main-content">

    <%- include('../../components/navbar', { title: 'Tahun Ajaran', user: user }) %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="fw-bold text-primary mb-1">Periode Akademik</h5>
            <small class="text-muted">Atur tahun ajaran dan semester aktif.</small>
        </div>
        <button class="btn btn-primary shadow-sm rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#modalTambah">
            <i class="fas fa-plus me-2"></i> Buka Tahun Baru
        </button>
    </div>

    <div class="alert alert-light border-0 shadow-sm d-flex align-items-center mb-4" style="background: #fff3cd; color: #856404;">
        <i class="fas fa-exclamation-triangle fa-lg me-3"></i>
        <div>
            <strong>Penting:</strong> Mengaktifkan tahun ajaran baru akan otomatis <u>menonaktifkan</u> tahun ajaran sebelumnya.
            Data jadwal dan nilai akan mengikuti tahun yang aktif.
        </div>
    </div>

    <div class="card card-custom border-0 shadow-sm overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3" style="width: 25%">Tahun Pelajaran</th>
                            <th style="width: 20%">Semester</th>
                            <th style="width: 25%">Status Sistem</th>
                            <th class="text-end pe-4">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% tahunList.forEach(item => { %>
                        <tr class="<%= item.status == 1 ? 'bg-success bg-opacity-10' : '' %>">
                            
                            <td class="ps-4">
                                <span class="fw-bold fs-5 text-dark"><%= item.tahun %></span>
                            </td>
                            
                            <td>
                                <% if(item.semester == 'Ganjil') { %>
                                    <span class="badge bg-primary rounded-pill px-3">GANJIL</span>
                                <% } else { %>
                                    <span class="badge bg-warning text-dark rounded-pill px-3">GENAP</span>
                                <% } %>
                            </td>
                            
                            <td>
                                <% if (item.status == 1) { %>
                                    <div class="d-flex align-items-center text-success fw-bold">
                                        <div class="spinner-grow spinner-grow-sm me-2" role="status"></div>
                                        SEDANG AKTIF
                                    </div>
                                <% } else { %>
                                    <a href="/admin/tahun/aktifkan/<%= item.id %>" class="btn btn-outline-secondary btn-sm rounded-pill px-3 fw-bold">
                                        <i class="fas fa-power-off me-1"></i> Aktifkan
                                    </a>
                                <% } %>
                            </td>
                            
                            <td class="text-end pe-4">
                                <% if (item.status == 0) { %>
                                    <a href="/admin/tahun/hapus/<%= item.id %>" class="btn btn-sm btn-danger rounded-circle shadow-sm" onclick="return confirm('Yakin hapus tahun ajaran ini? Data historis mungkin terpengaruh.')" title="Hapus">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                <% } else { %>
                                    <span class="text-muted small fst-italic">Terkunci</span>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalTambah" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/admin/tahun/tambah" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold">Buka Tahun Ajaran Baru</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Tahun Pelajaran</label>
                            <input type="text" name="tahun" class="form-control" placeholder="Contoh: 2025/2026" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Semester</label>
                            <select name="semester" class="form-select">
                                <option value="Ganjil">Ganjil</option>
                                <option value="Genap">Genap</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary fw-bold">Simpan & Buat</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<%- include('../../partials/footer') %>