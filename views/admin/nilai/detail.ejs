<%- include('../../partials/header', { title: 'Detail Nilai' }) %>
<%- include('../../components/sidebar-admin', { activePage: 'monitoring' }) %>

<div class="main-content">
    <%- include('../../components/navbar', { title: 'Detail Nilai Kelas', user: user }) %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="fw-bold mb-1"><%= info.nama_mapel %> - <%= info.nama_kelas %></h5>
            <small class="text-muted">Guru: <%= info.nama_lengkap %></small>
        </div>
        <a href="/admin/monitoring-nilai" class="btn btn-light fw-bold"><i class="fas fa-arrow-left me-2"></i> Kembali</a>
    </div>

    <div class="card card-custom border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped align-middle mb-0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th class="ps-4">Nama Siswa</th>
                            <th class="text-center">Nilai UTS</th>
                            <th class="text-center">Nilai UAS</th>
                            <th class="text-center pe-4">Nilai Akhir</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% siswaList.forEach(s => { %>
                        <tr>
                            <td class="ps-4 fw-bold"><%= s.nama_lengkap %></td>
                            <td class="text-center"><%= s.uts || '-' %></td>
                            <td class="text-center"><%= s.uas || '-' %></td>
                            <td class="text-center fw-bold pe-4"><%= s.nilai_akhir ? s.nilai_akhir.toFixed(0) : '-' %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer') %>