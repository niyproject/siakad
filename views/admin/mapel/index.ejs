<%- include('../../partials/header', { title: 'Data Mata Pelajaran' }) %>
<%- include('../../components/sidebar-admin', { activePage: 'mapel' }) %>

<div class="main-content">

    <%- include('../../components/navbar', { title: 'Data Mapel', user: user }) %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="fw-bold text-primary mb-1">Mata Pelajaran</h5>
            <small class="text-muted">Daftar kurikulum dan pelajaran sekolah.</small>
        </div>
        <button class="btn btn-primary shadow-sm rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#modalTambah">
            <i class="fas fa-plus me-2"></i> Tambah Mapel
        </button>
    </div>

    <div class="card card-custom border-0 shadow-sm overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3" style="width: 10%">No</th>
                            <th style="width: 20%">Kode</th>
                            <th>Nama Mata Pelajaran</th>
                            <th class="text-end pe-4" style="width: 20%">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (mapelList.length === 0) { %>
                            <tr><td colspan="4" class="text-center py-5 text-muted">Belum ada data mapel.</td></tr>
                        <% } else { %>
                            <% mapelList.forEach((mapel, index) => { %>
                            <tr>
                                <td class="ps-4 text-center"><%= index + 1 %></td>
                                <td>
                                    <span class="badge bg-info text-dark border border-info border-opacity-25 rounded-pill px-3">
                                        <%= mapel.kode_mapel %>
                                    </span>
                                </td>
                                <td class="fw-bold text-dark"><%= mapel.nama_mapel %></td>
                                <td class="text-end pe-4">
                                    <button class="btn btn-sm btn-warning text-white rounded-circle shadow-sm" data-bs-toggle="modal" data-bs-target="#modalEdit<%= mapel.id %>" title="Edit">
                                        <i class="fas fa-pen"></i>
                                    </button>
                                    <a href="/admin/mapel/hapus/<%= mapel.id %>" class="btn btn-sm btn-danger rounded-circle shadow-sm ms-1" title="Hapus" onclick="return confirm('Hapus mapel ini?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>

                            <div class="modal fade" id="modalEdit<%= mapel.id %>" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form action="/admin/mapel/edit/<%= mapel.id %>" method="POST">
                                            <div class="modal-header">
                                                <h5 class="modal-title fw-bold">Edit Mapel</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold small">Kode Mapel</label>
                                                    <input type="text" name="kode_mapel" class="form-control" value="<%= mapel.kode_mapel %>" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold small">Nama Mapel</label>
                                                    <input type="text" name="nama_mapel" class="form-control" value="<%= mapel.nama_mapel %>" required>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-warning fw-bold text-white">Update</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalTambah" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/admin/mapel/tambah" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold">Tambah Mapel Baru</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Kode Mapel (Singkatan)</label>
                            <input type="text" name="kode_mapel" class="form-control" placeholder="Cth: MTK, IND, IPA" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Nama Mata Pelajaran</label>
                            <input type="text" name="nama_mapel" class="form-control" placeholder="Cth: Matematika Wajib" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary fw-bold">Simpan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<%- include('../../partials/footer') %>