                <a href="#" class="nav-link text-white"><i class="fas fa-envelope me-3"></i> Kontak Admin</a>
            </li>
            <hr class="border-secondary">
            <li class="nav-item">
                <a href="/login" class="nav-link text-warning fw-bold"><i class="fas fa-sign-in-alt me-3"></i> Login</a>
            </li>
        </ul>

        <div class="mt-5 text-center text-white-50 small">
