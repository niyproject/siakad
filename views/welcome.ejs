<%- include('partials/header', { title: 'SIAKAD' }) %>

<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        overflow: hidden;
        /* BACKGROUND ANIMASI CSS (Jauh lebih ringan dari JS) */
        background: linear-gradient(-45deg, #1e3c72, #2a5298, #0f2027, #203a43);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Animasi Gerak Background */
    @keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    /* Navbar */
    .navbar {
        position: absolute;
        top: 0;
        width: 100%;
        z-index: 10;
    }
    .navbar-brand { font-weight: 700; letter-spacing: 1px; text-shadow: 0 2px 4px rgba(0,0,0,0.3); }

    /* KOTAK TENGAH (Glassmorphism Ringan) */
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        /* Blur dikurangi biar gak berat render-nya */
        backdrop-filter: blur(5px); 
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 20px;
        padding: 40px;
        max-width: 600px;
        width: 90%;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        animation: floatUp 1s ease-out;
    }

    .display-4 { font-weight: 700; text-shadow: 0 2px 10px rgba(0,0,0,0.3); }
    
    .lead { font-weight: 300; letter-spacing: 0.5px; }

    .btn-cta {
        background: #ffc107;
        color: #000;
        font-weight: 700;
        padding: 14px 40px;
        border-radius: 50px;
        text-decoration: none;
        box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
        transition: all 0.3s;
        display: inline-block;
        border: 2px solid transparent;
    }
    
    .btn-cta:hover {
        background: transparent;
        color: #ffc107;
        border: 2px solid #ffc107;
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(255, 193, 7, 0.5);
    }

    @keyframes floatUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<nav class="navbar navbar-dark bg-transparent p-4">
    <div class="container-fluid">
        <span class="navbar-brand fs-4"><i class="fas fa-graduation-cap me-2"></i> SIAKAD</span>
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#menuOffcanvas">
            <i class="fas fa-bars fs-3"></i>
        </button>
    </div>
</nav>

<div class="glass-card">
    <h1 class="display-4 text-white mb-3">Selamat Datang</h1>
    <p class="lead text-white text-opacity-75 mb-5">
        Platform Akademik Digital Terintegrasi.<br>
        <span style="font-size: 0.85rem; opacity: 0.8;">Cepat, Modern, dan Efisien.</span>
    </p>
    <a href="/login" class="btn-cta">
        MASUK APLIKASI <i class="fas fa-arrow-right ms-2"></i>
    </a>
</div>

<div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="menuOffcanvas">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title fw-bold">Menu Utama</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <ul class="nav flex-column fs-5 gap-3">
            <li class="nav-item">
                <a href="#" class="nav-link text-white"><i class="fas fa-info-circle me-3"></i> Tentang Aplikasi</a>
            </li>
