<%- include('partials/header', { title: 'Tentang Aplikasi' }) %>

<% if (user) { %>
    <% if (user.role === 'admin') { %>
        <%- include('components/sidebar-admin', { activePage: 'about' }) %>
    <% } else if (user.role === 'guru') { %>
        <%- include('components/sidebar-guru', { activePage: 'about', profil: profil }) %>
    <% } else if (user.role === 'siswa') { %>
        <%- include('components/sidebar-siswa', { activePage: 'about', profil: profil }) %>
    <% } %>

    <div class="main-content">
        <%- include('components/navbar', { title: 'Tentang Aplikasi', user: user }) %>
        
        <%- includeContent() %>
    </div>

<% } else { %>
    <style>body { background-color: #f8f9fa; }</style>
    
    <nav class="navbar navbar-dark bg-dark mb-4 shadow-sm px-4">
        <a class="navbar-brand fw-bold" href="/"><i class="fas fa-arrow-left me-2"></i> Kembali ke Home</a>
    </nav>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <%- includeContent() %>
            </div>
        </div>
    </div>
<% } %>

