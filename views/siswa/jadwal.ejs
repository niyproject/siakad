<%- include('../partials/header', { title: 'Jadwal Pelajaran' }) %>
<%- include('../components/sidebar-siswa', { activePage: 'jadwal', profil: profil }) %>

<div class="main-content">

    <%- include('../components/navbar', { title: 'Jadwal Pelajaran', user: profil }) %>

    <div class="card card-custom border-0 shadow-sm overflow-hidden">
        <div class="card-header bg-white p-4 border-0">
            <h5 class="fw-bold m-0 text-primary"><i class="fas fa-list-alt me-2"></i> Jadwal Mingguan</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3" style="width: 15%">Hari</th>
                            <th style="width: 20%">Waktu</th>
                            <th style="width: 35%">Mata Pelajaran</th>
                            <th style="width: 30%">Guru Pengampu</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (jadwalList.length === 0) { %>
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="fas fa-calendar-times fa-3x mb-3 opacity-25"></i><br>
                                    Belum ada jadwal pelajaran yang aktif.
                                </td>
                            </tr>
                        <% } else { %>
                            <% 
                                let lastHari = ''; // Variable buat cek hari sebelumnya
                            %>
                            <% jadwalList.forEach(item => { %>
                            <tr class="<%= item.hari !== lastHari ? 'border-top border-2' : '' %>"> <td class="ps-4 fw-bold align-top pt-3">
                                    <% if (item.hari !== lastHari) { %>
                                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">
                                            <%= item.hari %>
                                        </span>
                                        <% lastHari = item.hari; // Update hari terakhir %>
                                    <% } %>
                                </td>

                                <td class="text-dark fw-medium">
                                    <i class="far fa-clock me-2 text-muted small"></i> 
                                    <%= item.jam_mulai %> - <%= item.jam_selesai %>
                                </td>

                                <td>
                                    <span class="fw-bold text-dark"><%= item.nama_mapel %></span>
                                </td>

                                <td class="text-muted small">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-1 me-2 d-flex justify-content-center align-items-center" style="width:25px; height:25px;">
                                            <i class="fas fa-user text-secondary" style="font-size: 10px;"></i>
                                        </div>
                                        <%= item.nama_lengkap %>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<%- include('../partials/footer') %>