<%- include('../../partials/header', { title: 'Daftar Materi' }) %>
<%- include('../../components/sidebar-siswa', { activePage: 'materi', profil: profil }) %>

<div class="main-content">
    <%- include('../../components/navbar', { title: nama_mapel, user: user }) %>

    <div class="mb-3">
        <a href="/siswa/materi" class="btn btn-light shadow-sm text-muted">
            <i class="fas fa-arrow-left me-2"></i> Kembali ke Rak Buku
        </a>
    </div>

    <% if (materiList.length === 0) { %>
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-3x text-muted mb-3 opacity-25"></i>
            <p class="text-muted fw-bold">Belum ada materi di mapel ini.</p>
        </div>
    <% } else { %>
        <div class="row g-3">
            <% materiList.forEach(item => { %>
            <div class="col-md-12">
                <div class="card card-custom border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="bg-danger bg-opacity-10 text-danger rounded p-3 text-center" style="width: 60px; height: 60px;">
                                    <i class="fas fa-file-pdf fa-2x"></i>
                                </div>
                            </div>
                            
                            <div class="flex-grow-1">
                                <h6 class="fw-bold mb-1 text-dark"><%= item.judul %></h6>
                                <p class="text-muted small mb-1 text-truncate" style="max-width: 90%;">
                                    <%= item.deskripsi || 'Tidak ada deskripsi.' %>
                                </p>
                                <small class="text-muted fst-italic" style="font-size: 0.75rem;">
                                    <i class="fas fa-clock me-1"></i> <%= new Date(item.created_at).toLocaleDateString('id-ID') %>
                                    &bull; Oleh: <%= item.nama_guru %>
                                </small>
                            </div>

                            <div class="flex-shrink-0 ms-2">
                                <a href="/siswa/materi/baca/<%= item.id %>" class="btn btn-primary fw-bold px-4 rounded-pill shadow-sm">
                                    BACA <i class="fas fa-book-reader ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    <% } %>
</div>

<%- include('../../partials/footer') %>