<div class="main-content">

    <%- include('../components/navbar', { title: 'Dashboard', user: profil }) %>

    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-light border-0 shadow-sm d-flex align-items-center justify-content-between" style="background: linear-gradient(to right, #2a5298, #1e3c72); color: white;">
                <div class="d-flex align-items-center">
                    <div class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="fas fa-server fa-lg"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold mb-0">Sistem Informasi Akademik</h5>
                        <p class="mb-0 small opacity-75">Status Server: Online & Siap Digunakan</p>
                    </div>
                </div>
                
                <!-- <div class="text-end d-none d-md-block">
                    <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">
                        <i class="fas fa-calendar-check me-1"></i> Admin Panel v1.0
                    </span>
                </div> -->
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card card-custom p-3 border-start border-4 border-primary h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted small mb-1 text-uppercase fw-bold">Total Siswa</p>
                        <h2 class="fw-bold m-0 text-primary"><%= stats.siswa %></h2>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                        <i class="fas fa-user-graduate text-primary fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card card-custom p-3 border-start border-4 border-success h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted small mb-1 text-uppercase fw-bold">Total Guru</p>
                        <h2 class="fw-bold m-0 text-success"><%= stats.guru %></h2>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                        <i class="fas fa-chalkboard-teacher text-success fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card card-custom p-3 border-start border-4 border-warning h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted small mb-1 text-uppercase fw-bold">Total Kelas</p>
                        <h2 class="fw-bold m-0 text-warning"><%= stats.kelas %></h2>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                        <i class="fas fa-school text-warning fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card card-custom p-3 border-start border-4 border-danger h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted small mb-1 text-uppercase fw-bold">Mata Pelajaran</p>
                        <h2 class="fw-bold m-0 text-danger"><%= stats.mapel %></h2>
                    </div>
                    <div class="bg-danger bg-opacity-10 p-3 rounded-circle">
                        <i class="fas fa-book text-danger fa-lg"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-8">
            <div class="card card-custom border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h5 class="fw-bold m-0"><i class="fas fa-rocket me-2 text-primary"></i> Aksi Cepat</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-6 col-md-4">
                            <a href="/admin/siswa/tambah" class="btn btn-outline-primary w-100 py-3 rounded-3 d-flex flex-column align-items-center">
                                <i class="fas fa-user-plus fa-2x mb-2"></i>
                                <span class="fw-bold small">Tambah Siswa</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-4">
                            <a href="/admin/guru/tambah" class="btn btn-outline-success w-100 py-3 rounded-3 d-flex flex-column align-items-center">
                                <i class="fas fa-chalkboard-teacher fa-2x mb-2"></i>
                                <span class="fw-bold small">Tambah Guru</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-4">
                            <a href="/admin/jadwal/tambah" class="btn btn-outline-warning text-dark w-100 py-3 rounded-3 d-flex flex-column align-items-center">
                                <i class="fas fa-calendar-plus fa-2x mb-2"></i>
                                <span class="fw-bold small">Plotting Jadwal</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-custom border-0 shadow-sm h-100 text-white" style="background: #343a40;">
                <div class="card-body p-4 text-center d-flex flex-column justify-content-center">
                    <i class="fas fa-clock fa-4x mb-3 text-warning"></i>
                    <h4 class="fw-bold" id="jam-digital">00:00:00</h4>
                    <p class="small opacity-75 mb-0" id="tanggal-hari-ini">Senin, 1 Januari 2025</p>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    function updateClock() {
        const now = new Date();
        document.getElementById('jam-digital').innerText = now.toLocaleTimeString('id-ID', {hour: '2-digit', minute:'2-digit', second: '2-digit'});
        document.getElementById('tanggal-hari-ini').innerText = now.toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
    }
    setInterval(updateClock, 1000);
    updateClock();
</script>

