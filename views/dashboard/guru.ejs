<%- include('../partials/header', { title: 'Dashboard Guru' }) %>
<%- include('../components/sidebar-guru', { activePage: 'dashboard', profil: profil }) %>

<div class="main-content">
    
    <%- include('../components/navbar', { title: 'Dashboard', user: profil }) %>

    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-light border-0 shadow-sm d-flex align-items-center" style="background: linear-gradient(to right, #e3f2fd, #ffffff);">
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-calendar-day fa-lg"></i>
                </div>
                <div>
                    <h5 class="fw-bold mb-0 text-primary">Jadwal Hari Ini: <%= hariIni %></h5>
                    <p class="mb-0 text-muted small">Semangat mengajar! Jangan lupa isi absen dan nilai.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card card-custom border-0 shadow-sm overflow-hidden">
        <div class="card-header bg-white p-4 border-0 d-flex justify-content-between align-items-center">
            <h5 class="fw-bold m-0 text-dark">Kelas Hari Ini</h5>
            <% if (jadwalList.length > 0) { %>
                <span class="badge bg-success rounded-pill"><%= jadwalList.length %> Kelas</span>
            <% } %>
        </div>
        
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Jam Ke</th>
                            <th>Waktu</th>
                            <th>Kelas</th>
                            <th>Mata Pelajaran</th>
                            <th class="text-end pe-4">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (jadwalList.length === 0) { %>
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="fas fa-couch fa-3x mb-3 opacity-25"></i><br>
                                    <h6 class="fw-bold">Tidak ada jadwal mengajar hari ini.</h6>
                                    <span class="small">Silakan cek menu "Jadwal Mengajar" untuk hari lain.</span>
                                </td>
                            </tr>
                        <% } else { %>
                            <% jadwalList.forEach((jadwal, index) => { %>
                            <tr>
                                <td class="ps-4 fw-bold text-muted">#<%= index + 1 %></td>
                                <td>
                                    <span class="badge bg-light text-dark border fw-bold">
                                        <%= jadwal.jam_mulai_fmt %> - <%= jadwal.jam_selesai_fmt %>
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-primary rounded-pill"><%= jadwal.nama_kelas %></span>
                                </td>
                                <td class="fw-bold text-dark"><%= jadwal.nama_mapel %></td>
                                <td class="text-end pe-4">
                                    <a href="/absensi/guru/dashboard/<%= jadwal.mengajar_id %>" class="btn btn-sm btn-warning rounded-pill px-3 fw-bold me-1 shadow-sm">
                                        <i class="fas fa-qrcode me-1"></i> Absen
                                    </a>

                                    <a href="/guru/tugas/<%= jadwal.mengajar_id %>" class="btn btn-sm btn-outline-primary rounded-pill px-3 fw-bold">
                                        Masuk <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row mt-4 g-3">
        <div class="col-md-6">
            <a href="/guru/jadwal" class="card card-custom p-3 text-decoration-none h-100">
                <div class="d-flex align-items-center text-dark">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle me-3">
                        <i class="fas fa-calendar-alt text-warning fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">Lihat Jadwal Full</h6>
                        <small class="text-muted">Cek roster seminggu penuh</small>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6">
            <a href="/guru/menu-nilai" class="card card-custom p-3 text-decoration-none h-100">
                <div class="d-flex align-items-center text-dark">
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3">
                        <i class="fas fa-pen-alt text-success fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">Input Nilai Rapor</h6>
                        <small class="text-muted">Kelola nilai ujian & rapor siswa</small>
                    </div>
                </div>
            </a>
        </div>
    </div>

</div>

<div class="modal fade" id="modalUpload" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title fw-bold">Ganti Foto Profil</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/profil/upload" method="POST" enctype="multipart/form-data">
                <div class="modal-body text-center">
                    <div class="mb-3">
                        <label class="form-label small text-muted">Pilih foto (Max 2MB)</label>
                        <input type="file" name="foto" class="form-control form-control-sm" accept="image/*" required>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="submit" class="btn btn-primary btn-sm w-100">Upload Sekarang</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>