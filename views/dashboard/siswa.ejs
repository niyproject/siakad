<%- include('../partials/header', { title: 'Dashboard Siswa' }) %>
<%- include('../components/sidebar-siswa', { activePage: 'dashboard', profil: profil }) %>

<div class="main-content">

    <%- include('../components/navbar', { title: 'Dashboard', user: profil }) %>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card card-custom border-0 shadow-sm" style="background: linear-gradient(to right, #ffffff, #f8f9fa);">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="fw-bold mb-0 text-dark">
                                <i class="fas fa-calendar-day text-primary me-2"></i> Jadwal Hari Ini
                            </h5>
                            <small class="text-muted"><%= namaHari %>, Semangat belajarnya! ðŸ”¥</small>
                        </div>
                        <% if (jadwalHariIni.length > 0) { %>
                            <span class="badge bg-primary rounded-pill px-3"><%= jadwalHariIni.length %> Mapel</span>
                        <% } %>
                    </div>

                    <% if (jadwalHariIni.length === 0) { %>
                        <div class="alert alert-light border border-secondary border-opacity-10 d-flex align-items-center mb-0 text-secondary">
                            <i class="fas fa-couch fa-2x me-3 opacity-50"></i>
                            <div>
                                <strong>Tidak ada jadwal pelajaran.</strong><br>
                                <span class="small">Selamat beristirahat atau belajar mandiri ya!</span>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="d-flex gap-3" style="overflow-x: auto; padding-bottom: 5px;">
                            <% jadwalHariIni.forEach(item => { %>
                                <div class="card border border-light shadow-sm flex-shrink-0" style="min-width: 220px; border-radius: 12px;">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="badge bg-primary bg-opacity-10 text-primary fw-bold">
                                                <%= item.jam_mulai_fmt %> - <%= item.jam_selesai_fmt %>
                                            </span>
                                        </div>
                                        <h6 class="fw-bold text-dark mb-1"><%= item.nama_mapel %></h6>
                                        <small class="text-muted d-flex align-items-center">
                                            <i class="fas fa-chalkboard-teacher me-1 small"></i> <%= item.nama_guru %>
                                        </small>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>

                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-12 col-md-4">
            <div class="card card-custom p-3 border-start border-4 border-success">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted small mb-1">Rata-Rata Nilai</p>
                        <h2 class="fw-bold m-0 text-success"><%= statistik.rataRata %></h2>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                        <i class="fas fa-calculator text-success"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-12 col-md-4">
            <div class="card card-custom p-3 border-start border-4 border-warning">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted small mb-1">Ranking Kelas</p>
                        <h2 class="fw-bold m-0 text-warning">#<%= statistik.rankingKelas %> <span class="fs-6 text-muted text-dark">/ <%= statistik.totalSiswa %></span></h2>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                        <i class="fas fa-trophy text-warning"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card card-custom p-3 border-start border-4 border-primary">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted small mb-1">Predikat</p>
                        <h2 class="fw-bold m-0 text-primary">
                            <% if(statistik.rataRata >= 90) { %> A 
                            <% } else if(statistik.rataRata >= 80) { %> B
                            <% } else if(statistik.rataRata >= 75) { %> C
                            <% } else { %> - <% } %>
                        </h2>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                        <i class="fas fa-star text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card card-custom p-0 overflow-hidden">
        <div class="card-header bg-white p-4 border-0">
            <h5 class="fw-bold m-0"><i class="fas fa-file-alt me-2 text-primary"></i> Laporan Hasil Belajar</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Mata Pelajaran</th>
                        <th>Guru Pengampu</th>
                        <th class="text-center">Tugas</th>
                        <th class="text-center">UTS</th>
                        <th class="text-center">UAS</th>
                        <th class="text-center fw-bold text-primary pe-4">Nilai Akhir</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (nilaiList.length === 0) { %>
                        <tr><td colspan="6" class="text-center py-5 text-muted">Belum ada nilai.</td></tr>
                    <% } else { %>
                        <% nilaiList.forEach(nilai => { %>
                        <tr>
                            <td class="ps-4 fw-bold"><%= nilai.nama_mapel %></td>
                            <td class="small text-muted"><%= nilai.nama_guru %></td>
                            <td class="text-center"><%= nilai.uh1 %></td>
                            <td class="text-center"><%= nilai.uts %></td>
                            <td class="text-center"><%= nilai.uas %></td>
                            <td class="text-center fw-bold fs-5 text-primary pe-4">
                                <%= nilai.nilai_akhir ? nilai.nilai_akhir.toFixed(0) : 0 %>
                            </td>
                        </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

</div>

<%- include('../partials/footer') %>