<%- include('../partials/header', { title: 'Jadwal Mengajar' }) %>
<%- include('../components/sidebar-guru', { activePage: 'jadwal', profil: profil }) %>

<div class="main-content">

    <%- include('../components/navbar', { title: 'Jadwal Mengajar', user: profil }) %>

    <div class="card card-custom border-0 shadow-sm overflow-hidden">
        <div class="card-header bg-white p-4 border-0 d-flex justify-content-between align-items-center">
            <h5 class="fw-bold m-0 text-primary"><i class="fas fa-calendar-week me-2"></i> Roster Mingguan</h5>
            
            <% if (jadwalList.length > 0) { %>
                <span class="badge bg-light text-primary border border-primary border-opacity-25 rounded-pill px-3">
                    Total: <%= jadwalList.length %> Kelas
                </span>
            <% } %>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3" style="width: 15%">Hari</th>
                            <th style="width: 20%">Waktu</th>
                            <th style="width: 20%">Kelas</th>
                            <th>Mata Pelajaran</th>
                            <th class="text-end pe-4">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (jadwalList.length === 0) { %>
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="fas fa-coffee fa-3x mb-3 opacity-25"></i><br>
                                    <h6 class="fw-bold mt-2">Belum ada jadwal mengajar.</h6>
                                    <small>Silakan hubungi Admin Kurikulum.</small>
                                </td>
                            </tr>
                        <% } else { %>
                            <% let lastHari = ''; %>
                            <% jadwalList.forEach(item => { %>
                            <tr class="<%= item.hari !== lastHari ? 'border-top border-2' : '' %>">
                                
                                <td class="ps-4 fw-bold align-top pt-3">
                                    <% if (item.hari !== lastHari) { %>
                                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">
                                            <%= item.hari %>
                                        </span>
                                        <% lastHari = item.hari; %>
                                    <% } %>
                                </td>

                                <td class="text-dark fw-medium">
                                    <i class="far fa-clock me-2 text-muted small"></i> 
                                    <%= item.jam_mulai %> - <%= item.jam_selesai %>
                                </td>

                                <td>
                                    <span class="badge bg-info text-dark rounded-pill px-3">
                                        <%= item.nama_kelas %>
                                    </span>
                                </td>

                                <td>
                                    <span class="fw-bold text-dark"><%= item.nama_mapel %></span>
                                </td>
                                
                                <td class="text-end pe-4">
                                    <% if(item.id || item.mengajar_id) { %>
                                        
                                        <a href="/absensi/guru/dashboard/<%= item.id || item.mengajar_id %>" 
                                        class="btn btn-sm btn-warning rounded-circle shadow-sm me-1" 
                                        title="Buka Sesi Absen">
                                            <i class="fas fa-qrcode"></i>
                                        </a>

                                        <a href="/guru/nilai/<%= item.id || item.mengajar_id %>" 
                                        class="btn btn-sm btn-outline-success rounded-circle shadow-sm" 
                                        title="Input Nilai">
                                            <i class="fas fa-pen"></i>
                                        </a>

                                    <% } %>
                                </td>
                            </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="mt-3 text-center">
        <small class="text-muted">
            <i class="fas fa-info-circle me-1"></i> Jadwal ini berlaku untuk Semester <strong>Aktif</strong>.
        </small>
    </div>

</div>

<div class="modal fade" id="modalUpload" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title fw-bold">Ganti Foto Profil</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/profil/upload" method="POST" enctype="multipart/form-data">
                <div class="modal-body text-center">
                    <div class="mb-3">
                        <label class="form-label small text-muted">Pilih foto (Max 2MB)</label>
                        <input type="file" name="foto" class="form-control form-control-sm" accept="image/*" required>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="submit" class="btn btn-primary btn-sm w-100">Upload Sekarang</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>