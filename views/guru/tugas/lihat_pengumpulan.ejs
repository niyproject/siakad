<%- include('../../partials/header', { title: 'Penilaian Tugas' }) %>
<%- include('../../components/sidebar-guru', { activePage: 'input-nilai', profil: profil }) %>

<div class="main-content">

    <%- include('../../components/navbar', { title: 'Penilaian Tugas', user: profil }) %>

    <div class="card card-custom border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <span class="badge bg-primary mb-2"><%= tugas.tipe_tugas %></span>
                    <h4 class="fw-bold text-dark"><%= tugas.judul %></h4>
                    <p class="text-muted mb-0"><%= tugas.deskripsi %></p>
                </div>
                <a href="/guru/tugas/<%= tugas.mengajar_id %>" class="btn btn-light text-muted fw-bold">
                    <i class="fas fa-arrow-left me-2"></i> Kembali
                </a>
            </div>
        </div>
    </div>

    <div class="card card-custom border-0 shadow-sm overflow-hidden">
        <div class="card-header bg-white p-4 border-0">
            <h5 class="fw-bold m-0 text-dark"><i class="fas fa-users me-2 text-success"></i> Jawaban Siswa Masuk</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Siswa</th>
                            <th>Waktu Kumpul</th>
                            <th>File / Jawaban</th>
                            <th>Catatan Siswa</th>
                            <th>Nilai</th>
                            <th class="text-end pe-4">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (listKumpul.length === 0) { %>
                            <tr><td colspan="6" class="text-center py-5 text-muted">Belum ada siswa yang mengumpulkan.</td></tr>
                        <% } else { %>
                            
                            <% listKumpul.forEach(item => { %>
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark"><%= item.nama_lengkap %></div>
                                    <small class="text-muted"><%= item.nis %></small>
                                </td>
                                
                                <td>
                                    <% 
                                        let isLate = new Date(item.tanggal_kumpul) > new Date(tugas.deadline);
                                    %>
                                    <small class="<%= isLate ? 'text-danger fw-bold' : 'text-muted' %>">
                                        <%= item.tgl_fmt %>
                                    </small>
                                    
                                    <% if(isLate) { %> <span class="badge bg-danger" style="font-size: 0.6rem">LATE</span> <% } %>
                                    <% if(item.is_edited == 1) { %>
                                        <span class="badge bg-warning text-dark border border-dark border-opacity-25 ms-1" style="font-size: 0.6rem">EDITED</span>
                                    <% } %>
                                </td>
                                
                                <td>
                                    <% if (item.file_siswa) { %>
                                        <% 
                                            const fileExt = item.file_siswa.split('.').pop().toLowerCase();
                                            const isImage = ['jpg', 'jpeg', 'png', 'gif'].includes(fileExt);
                                            const isPdf = ['pdf'].includes(fileExt);
                                        %>

                                        <% if (isImage) { %>
                                            <button class="btn btn-sm btn-outline-info rounded-pill px-3" onclick="showPreview('<%= item.file_siswa %>')"><i class="fas fa-eye me-1"></i> Lihat</button>
                                        <% } else if (isPdf) { %>
                                            <a href="/uploads/tugas/<%= item.file_siswa %>" target="_blank" class="btn btn-sm btn-outline-danger rounded-pill px-3"><i class="fas fa-file-pdf me-1"></i> PDF</a>
                                        <% } else { %>
                                            <a href="/uploads/tugas/<%= item.file_siswa %>" target="_blank" class="btn btn-sm btn-outline-secondary rounded-pill px-3"><i class="fas fa-download me-1"></i> Unduh</a>
                                        <% } %>

                                    <% } else if (item.jawaban_json) { %>
                                        <button class="btn btn-sm btn-primary rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#modalJawaban<%= item.id %>">
                                            <i class="fas fa-list-alt me-1"></i> Cek Jawaban
                                        </button>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                    <% } %>
                                </td>

                                <td><small class="text-muted fst-italic"><%= item.catatan_siswa || '-' %></small></td>
                                
                                <td>
                                    <% if (item.status_koreksi === 'Sudah') { %>
                                        <span class="fw-bold text-primary fs-5"><%= item.nilai %></span>
                                        <i class="fas fa-check-circle text-success small ms-1"></i>
                                    <% } else { %>
                                        <span class="badge bg-warning text-dark border border-warning border-opacity-25">Belum Dinilai</span>
                                    <% } %>
                                </td>
                                
                                <td class="text-end pe-4">
                                    <button class="btn btn-sm btn-success shadow-sm" data-bs-toggle="modal" data-bs-target="#modalNilai<%= item.id %>">
                                        <i class="fas fa-star me-1"></i> Nilai
                                    </button>
                                </td>
                            </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<% listKumpul.forEach(item => { %>
    
    <div class="modal fade" id="modalNilai<%= item.id %>" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/guru/tugas/nilai/<%= item.id %>" method="POST">
                    <input type="hidden" name="id_tugas" value="<%= tugas.id %>">
                    
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold">Beri Nilai: <%= item.nama_lengkap %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nilai (0-100)</label>
                            <input type="number" name="nilai" class="form-control form-control-lg text-center fw-bold text-primary" value="<%= item.nilai || '' %>" placeholder="0" min="0" max="100" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Komentar / Feedback</label>
                            <textarea name="komentar" class="form-control" rows="3" placeholder="Kerja bagus..."><%= item.komentar_guru || '' %></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success fw-bold w-100">SIMPAN NILAI</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

   <% if (item.jawaban_json) { %>
        
        <% 
            const jawabanSiswa = JSON.parse(item.jawaban_json || '[]');
            const soalAsli = JSON.parse(tugas.soal_json || '[]');
            
            let pgBenar = 0;
            let totalPG = 0;
            let totalEssay = 0;

            soalAsli.forEach(s => {
                if (s.tipe === 'pg') {
                    totalPG++;
                    const jwb = jawabanSiswa.find(j => j.id == s.id)?.jawab || '';
                    if (jwb.trim().toUpperCase() === s.kunci.trim().toUpperCase()) {
                        pgBenar++;
                    }
                } else {
                    totalEssay++;
                }
            });
            
            let totalSoal = totalPG + totalEssay;
            // Hitung nilai (hanya berdasarkan PG)
            let nilaiEstimasi = totalSoal > 0 ? Math.round((pgBenar / totalSoal) * 100) : 0;
        %>

        <div class="modal fade" id="modalJawaban<%= item.id %>" tabindex="-1">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header bg-light">
                        <h5 class="modal-title fw-bold">
                            <i class="fas fa-user-graduate me-2 text-primary"></i> 
                            Jawaban: <%= item.nama_lengkap %>
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    
                    <div class="modal-body bg-light">
                        
                        <% if (totalPG > 0) { %>
                        <div class="card border-0 shadow-sm mb-4 bg-primary text-white">
                            <div class="card-body p-3 d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0 opacity-75">Hasil Pilihan Ganda:</h6>
                                    <h3 class="fw-bold mb-0">Benar <%= pgBenar %> <span class="fs-6 fw-normal opacity-75">dari <%= totalPG %> Soal</span></h3>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-white text-primary fs-4 fw-bold shadow-sm"><%= nilaiEstimasi %></span>
                                    <div class="small mt-1 opacity-75">Estimasi Nilai</div>
                                </div>
                            </div>
                        </div>
                        <% } %>

                        <% if (totalEssay > 0) { %>
                            <div class="alert alert-warning border-start border-4 border-warning shadow-sm mt-3 mb-4 d-flex align-items-center" role="alert">
                                <div class="me-3">
                                    <i class="fas fa-exclamation-triangle fa-2x text-danger"></i>
                                </div>
                                <div>
                                    <% if (totalPG > 0) { %>
                                        <strong class="text-danger fs-6">Perhatian: Ada <%= totalEssay %> Soal Essay!</strong>
                                        <div class="small text-danger opacity-75 mt-1">
                                            Nilai <%= nilaiEstimasi %> di atas <u>hanya dari Pilihan Ganda</u>. Silakan baca jawaban Essay di bawah, lalu tambahkan poin secara manual.
                                        </div>
                                    <% } else { %>
                                        <strong class="text-danger fs-6">Mode Penilaian Manual</strong>
                                        <div class="small text-danger opacity-75 mt-1">
                                            Semua soal adalah <strong>Essay</strong>. Sistem tidak memberikan rekomendasi nilai. Silakan baca dan nilai sendiri.
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% } %>
                        
                        <% soalAsli.forEach((soal, idx) => { %>
                            <% 
                                const jawabannya = jawabanSiswa.find(j => j.id == soal.id)?.jawab || '-'; 
                                let isCorrect = false;
                                let statusClass = '';
                                let iconStatus = '';

                                if (soal.tipe === 'pg') {
                                    isCorrect = (jawabannya.trim().toUpperCase() === soal.kunci.trim().toUpperCase());
                                    statusClass = isCorrect ? 'border-success' : 'border-danger';
                                    iconStatus = isCorrect ? '<i class="fas fa-check-circle text-success ms-2"></i>' : '<i class="fas fa-times-circle text-danger ms-2"></i>';
                                } else {
                                    statusClass = 'border-warning';
                                    iconStatus = '<i class="fas fa-pen-alt text-warning ms-2"></i>';
                                }
                            %>
                            
                            <div class="card mb-3 border-start border-4 <%= statusClass %> shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="fw-bold text-dark">Soal <%= idx + 1 %> <span class="badge bg-light text-dark border ms-2"><%= soal.tipe.toUpperCase() %></span></h6>
                                        <%- iconStatus %>
                                    </div>
                                    <p class="mb-2 text-muted"><%= soal.pertanyaan %></p>
                                    <div class="row g-2">
                                        <div class="col-md-6">
                                            <div class="p-2 border rounded bg-white h-100">
                                                <small class="text-muted d-block mb-1">Jawaban Siswa:</small>
                                                <span class="fw-bold <%= isCorrect ? 'text-success' : (soal.tipe === 'pg' ? 'text-danger' : 'text-dark') %>"><%= jawabannya %></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="p-2 border rounded bg-light h-100 opacity-75">
                                                <small class="text-muted d-block mb-1">Kunci / Referensi:</small>
                                                <span class="fw-bold text-dark"><%= soal.kunci %></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    
                    <div class="modal-footer bg-white">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Tutup</button>
                        
                        <% if (totalPG > 0) { %>
                            <button class="btn btn-primary fw-bold" 
                                    onclick="autoFillNilai('<%= item.id %>', '<%= nilaiEstimasi %>')"
                                    data-bs-toggle="modal" 
                                    data-bs-target="#modalNilai<%= item.id %>" 
                                    data-bs-dismiss="modal">
                                <i class="fas fa-magic me-2"></i> Gunakan Nilai (<%= nilaiEstimasi %>)
                            </button>
                        <% } else { %>
                            <button class="btn btn-success fw-bold" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#modalNilai<%= item.id %>" 
                                    data-bs-dismiss="modal">
                                <i class="fas fa-pen-alt me-2"></i> Input Nilai Manual
                            </button>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

<% }) %>

<div class="modal fade" id="modalPreview" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-transparent border-0 shadow-none">
            <div class="modal-body p-0 text-center position-relative">
                <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3" data-bs-dismiss="modal"></button>
                <img id="previewImage" src="" class="img-fluid rounded shadow-lg" style="max-height: 80vh;">
            </div>
        </div>
    </div>
</div>

<script>
    function showPreview(filename) {
        const modal = new bootstrap.Modal(document.getElementById('modalPreview'));
        document.getElementById('previewImage').src = '/uploads/tugas/' + filename;
        modal.show();
    }

    function autoFillNilai(idModal, nilai) {
        // Delay dikit biar modal nilai render dulu
        setTimeout(() => {
            const input = document.querySelector(`#modalNilai${idModal} input[name="nilai"]`);
            if(input) input.value = nilai;
        }, 300);
    }
</script>

<%- include('../../partials/footer') %>