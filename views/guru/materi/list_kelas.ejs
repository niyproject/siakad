<%- include('../../partials/header', { title: 'Pilih Kelas Materi' }) %>
<%- include('../../components/sidebar-guru', { activePage: 'materi', profil: profil }) %>

<div class="main-content">
    <%- include('../../components/navbar', { title: 'Kelola E-Book & Materi', user: user }) %>

    <div class="alert alert-info border-0 shadow-sm mb-4">
        <i class="fas fa-info-circle me-2"></i> Pilih kelas yang ingin Anda kelola materi pelajarannya.
    </div>

    <div class="row g-3">
        <% list.forEach(item => { %>
        <div class="col-md-6 col-lg-4">
            <a href="/guru/materi/<%= item.mengajar_id %>" class="text-decoration-none">
                <div class="card card-custom h-100 border-0 shadow-sm hover-shadow">
                    <div class="card-body p-4 position-relative overflow-hidden">
                        <div class="position-absolute end-0 bottom-0 opacity-10 me-n3 mb-n3">
                            <i class="fas fa-book fa-5x text-success"></i>
                        </div>

                        <span class="badge bg-success mb-2"><%= item.nama_kelas %></span>
                        <h5 class="fw-bold text-dark mb-1"><%= item.nama_mapel %></h5>
                        
                        <div class="mt-3 text-muted small">
                            <i class="fas fa-file-pdf me-1 text-danger"></i> 
                            <strong><%= item.total_file %></strong> File Materi
                        </div>
                    </div>
                    <div class="card-footer bg-light border-0 py-3 text-center text-success fw-bold small">
                        KELOLA MATERI <i class="fas fa-arrow-right ms-1"></i>
                    </div>
                </div>
            </a>
        </div>
        <% }) %>
    </div>
</div>

<%- include('../../partials/footer') %>