<%- include('../partials/header', { title: 'Input Nilai' }) %>
<%- include('../components/sidebar-guru', { activePage: 'nilai', profil: profil }) %>

<div class="main-content">
    <%- include('../components/navbar', { title: 'Input Nilai Rapor', user: profil }) %>

    <div class="row g-4">
        <% kelasList.forEach(item => { %>
        <div class="col-md-6 col-lg-4">
            <div class="card card-custom h-100 border-0 shadow-sm border-start border-4 border-success">
                <div class="card-body p-4">
                    <span class="badge bg-success rounded-pill mb-3 px-3"><%= item.nama_kelas %></span>
                    <h5 class="fw-bold text-dark mb-1"><%= item.nama_mapel %></h5>
                    <p class="text-muted small mb-4">Semester <%= item.semester %></p>

                    <div class="d-grid">
                        <a href="/guru/nilai/<%= item.mengajar_id %>" class="btn btn-success rounded-pill fw-bold shadow-sm">
                            <i class="fas fa-pen-alt me-2"></i> Input Nilai Rapor
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<%- include('../partials/footer') %>