<%- include('../partials/header', { title: 'Kelola Nilai' }) %>
<%- include('../components/sidebar-guru', { activePage: 'input-nilai', profil: profil }) %>

<div class="main-content">

    <%- include('../components/navbar', { title: 'Kelola Nilai', user: profil }) %>

    <div class="mb-4">
        <h5 class="fw-bold text-dark mb-1">Pilih Kelas</h5>
        <p class="text-muted small">Pilih mata pelajaran dan kelas yang ingin Anda input nilainya.</p>
    </div>

    <% if (kelasList.length === 0) { %>
        <div class="alert alert-warning d-flex align-items-center">
            <i class="fas fa-exclamation-triangle me-3 fa-2x"></i>
            <div>
                <strong>Belum ada kelas yang diampu.</strong><br>
                Hubungi admin untuk plotting jadwal mengajar.
            </div>
        </div>
    <% } else { %>
        
        <div class="row g-4">
            <% kelasList.forEach(item => { %>
            <div class="col-md-6 col-lg-4">
                <div class="card card-custom h-100 border-0 shadow-sm position-relative overflow-hidden">
                    <div class="position-absolute top-0 end-0 p-3 opacity-10">
                        <i class="fas fa-book fa-5x text-primary"></i>
                    </div>

                    <div class="card-body p-4 position-relative">
                        <span class="badge bg-primary rounded-pill mb-3 px-3"><%= item.nama_kelas %></span>
                        
                        <h4 class="fw-bold text-dark mb-1"><%= item.nama_mapel %></h4>
                        <p class="text-muted small mb-4">Semester <%= item.semester %></p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="small text-muted">
                                <i class="fas fa-users me-1"></i> Data Masuk: <strong><%= item.jumlah_nilai_masuk %></strong>
                            </div>
                            
                            <a href="/guru/nilai/<%= item.mengajar_id %>" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
                                Buka <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                        <div class="d-flex gap-2"> <a href="/guru/tugas/<%= item.mengajar_id %>" class="btn btn-outline-primary rounded-pill px-3 fw-bold shadow-sm">
                                <i class="fas fa-tasks"></i> Tugas
                            </a>

                            <a href="/guru/nilai/<%= item.mengajar_id %>" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
                                Nilai <i class="fas fa-arrow-right ms-1"></i>
                            </a>

                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

    <% } %>

</div>

<%- include('../partials/footer') %>