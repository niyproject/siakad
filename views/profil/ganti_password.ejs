<%- include('../partials/header', { title: 'Ganti Password' }) %>

<style>
    body { background-color: #f8f9fa; }
    .main-content-center { max-width: 600px; margin: 50px auto; }
</style>

<nav class="navbar navbar-dark bg-dark mb-4 shadow-sm px-4">
    <a class="navbar-brand fw-bold" href="/dashboard"><i class="fas fa-arrow-left me-2"></i> Kembali ke Dashboard</a>
</nav>

<div class="container main-content-center">

    <div class="card card-custom border-0 shadow-lg">
        <div class="card-header bg-primary text-white p-4 text-center border-0">
            <i class="fas fa-key fa-3x mb-3 opacity-50"></i>
            <h4 class="fw-bold m-0">Ganti Password</h4>
            <p class="mb-0 opacity-75 small">Amankan akun Anda dengan password baru.</p>
        </div>
        
        <div class="card-body p-5">
            
            <% if (error) { %>
                <div class="alert alert-danger text-center"><%= error %></div>
            <% } %>
            <% if (success) { %>
                <div class="alert alert-success text-center"><%= success %></div>
            <% } %>

            <form action="/profil/ganti-password" method="POST">
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Password Lama</label>
                    <input type="password" name="pass_lama" class="form-control form-control-lg" required>
                </div>

                <hr class="my-4">

                <div class="mb-3">
                    <label class="form-label fw-bold text-primary">Password Baru</label>
                    <input type="password" name="pass_baru" class="form-control form-control-lg" required>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold text-primary">Konfirmasi Password Baru</label>
                    <input type="password" name="pass_konfirmasi" class="form-control form-control-lg" required>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm">SIMPAN PASSWORD BARU</button>
                </div>

            </form>
        </div>
    </div>

</div>

<%- include('../partials/footer') %>