<%- include('partials/header', { title: 'Admin Access' }) %>

<style>
    body {
        background-color: #111827; /* Dark Background */
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .card-admin {
        background: #1f2937;
        border: 1px solid #374151;
        color: white;
        border-radius: 15px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 0 50px rgba(0,0,0,0.5);
    }

    .form-control {
        background-color: #374151;
        border: 1px solid #4b5563;
        color: white;
    }
    .form-control:focus {
        background-color: #374151;
        color: white;
        border-color: #f59e0b; /* Warna Emas */
        box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.2);
    }
    .input-group-text {
        background-color: #374151;
        border-color: #4b5563;
        color: #9ca3af;
    }
    .form-label { color: #d1d5db; }
</style>

<div class="card card-admin p-4">
    <div class="text-center mb-4">
        <i class="fas fa-user-shield fa-3x text-warning mb-3"></i>
        <h4 class="fw-bold">Administrator</h4>
        <p class="text-muted small">Restricted Area. Authorized Personnel Only.</p>
    </div>

    <% if (locals.error) { %>
        <div class="alert alert-danger bg-danger bg-opacity-25 text-danger border-0 text-center py-2 mb-4">
            <i class="fas fa-ban me-1"></i> <%= error %>
        </div>
    <% } %>

    <form action="/auth/login" method="POST">
        <input type="hidden" name="target_role" value="admin">

        <div class="mb-3">
            <label class="form-label small fw-bold">Username</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input type="text" name="username" class="form-control" placeholder="Admin ID" required>
            </div>
        </div>

        <div class="mb-4">
            <label class="form-label small fw-bold">Password</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
                <input type="password" name="password" class="form-control" placeholder="•••••••" required>
            </div>
        </div>

        <button type="submit" class="btn btn-warning w-100 fw-bold text-dark py-2">
            LOGIN DASHBOARD
        </button>
    </form>

    <div class="text-center mt-4">
        <a href="/login" class="text-muted small text-decoration-none hover-white">
            &larr; Back to Public Login
        </a>
    </div>
</div>

<%- include('partials/footer') %>